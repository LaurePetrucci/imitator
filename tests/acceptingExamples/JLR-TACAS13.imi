var 	x, y
		: clock;
	a, b
		: parameter;


--****************************************************--
--****************************************************--
-- AUTOMATA
--****************************************************--
--****************************************************--


--****************************************************--
  automaton aa
--****************************************************--
synclabs: ;

loc l1: while x <= b wait {}
	when a <= x do {x' = 0} goto l1;
	when 2 <= y do {} goto l2;

accepting loc l2: while True wait {}
	when True do {} goto l2;
end -- aa



--****************************************************--
--****************************************************--
-- ANALYSIS
--****************************************************--
--****************************************************--

var init
	: region;

init :=
	----------------------
	-- Initial locations
	----------------------
	  loc[aa] = l1

	----------------------
	-- Clocks
	----------------------
	& x = 0
	& y = 0
	
	----------------------
	-- Bounded parameters
	----------------------
	& 0 <= a & a <= 10 
	& 0 <= b & b <= 10 
;

property := unreachable loc[aa] = l2;
