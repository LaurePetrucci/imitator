
var

(* Clocks *)
 	y,
		: clock;

(* Discrete *)
	j,
		: discrete;

(* Parameters *)
	p,
		: parameter;



(************************************************************)
  automaton pta2
(************************************************************)
synclabs: a;

loc l1: invariant True
	when y = 1 sync a do {y := p} goto l1;

end (* pta *)



init :=
	(*------------------------------------------------------------*)
	(* Initial location *)
	(*------------------------------------------------------------*)
	& loc[pta2] = l1

	(*------------------------------------------------------------*)
	(* Initial discrete assignments *)
	(*------------------------------------------------------------*)
	& j = 0

	(*------------------------------------------------------------*)
	(* Initial clock constraints *)
	(*------------------------------------------------------------*)
	& y = 0

	(*------------------------------------------------------------*)
	(* Parameter constraints *)
	(*------------------------------------------------------------*)
	& p >= 1
;

