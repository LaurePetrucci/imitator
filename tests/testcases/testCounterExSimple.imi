var

(* Clocks *)
 	x,
		: clock;



(************************************************************)
  automaton pta
(************************************************************)
synclabs: a;

loc l1: invariant x <= 3
	when x = 3 sync a do {x := 0} goto l2;

loc l2: invariant x <= 1
	when x = 1 sync a do {x := 0} goto l3;

loc l3: invariant x <= 1
	when x = 1 sync a goto l4;

loc l4: invariant x <= 8
	when x = 8 sync a goto lbad;

loc lbad: invariant True

end (* pta *)



(************************************************************)
(* Initial state *)
(************************************************************)

init :=
	(*------------------------------------------------------------*)
	(* Initial location *)
	(*------------------------------------------------------------*)
	& loc[pta] = l1

	(*------------------------------------------------------------*)
	(* Initial clock constraints *)
	(*------------------------------------------------------------*)
	& x = 0
;


(************************************************************)
(* Property specification *)
(************************************************************)

property := unreachable loc[pta] = lbad;


(************************************************************)
(* The end *)
(************************************************************)
end
