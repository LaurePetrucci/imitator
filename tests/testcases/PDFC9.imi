var

(* Clocks *)
 	x, y
		: clock;

(* Parameters *)
	p1
		: parameter;



(************************************************************)
  automaton pta
(************************************************************)
synclabs: ;

loc l1: while x <= p1 wait {}
	(* If p1 >= 0 *)
	when x = p1 goto l2;

	(* If p1 in [0, 2] *)
	when x = p1 & 0 <= x & x <= 2 goto l3;

(* Dummy deadlock-freeness *)
loc l2: while True wait {}
	when True goto l2;

loc l3: while x <= p1 wait {}
	(* If p1 = 2 *)
	when x = p1 & x = 2 goto l2;
	when x = p1 & x = 2 goto l4;

(* Classical infinite loop *)
loc l4: while x <= 2 wait {}
	when x = 2 do {x' = 0} goto l4;

end (* pta *)



(************************************************************)
(* Initial state *)
(************************************************************)

init :=
	(*------------------------------------------------------------*)
	(* Initial location *)
	(*------------------------------------------------------------*)
	& loc[pta] = l1

	(*------------------------------------------------------------*)
	(* Initial clock constraints *)
	(*------------------------------------------------------------*)
	& x = 0
	& y = 0

	(*------------------------------------------------------------*)
	(* Parameter constraints *)
	(*------------------------------------------------------------*)
	& p1 >= 0
;


(************************************************************)
(* Property specification *)
(************************************************************)

(* property := unreachable loc[pta] = l1; *)


(************************************************************)
(* The end *)
(************************************************************)
end
